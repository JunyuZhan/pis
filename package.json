{
  "name": "pis",
  "version": "1.0.0",
  "private": false,
  "description": "专业级私有化即时摄影分享系统 (Private Instant photo Sharing)",
  "author": "junyuzhan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/JunyuZhan/pis.git"
  },
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "cd apps/web && pnpm dev",
    "dev:worker": "cd services/worker && pnpm dev",
    "dev:services": "bash scripts/dev/start-dev.sh",
    "dev:stop": "cd docker && docker-compose -f docker-compose.dev.yml down",
    "dev:check-env": "bash scripts/dev/check-env.sh",
    "dev:clean": "bash scripts/dev/clean-cache.sh",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "setup": "bash scripts/deploy/setup.sh",
    "security-check": "bash scripts/utils/check-security.sh",
    "validate-env": "bash scripts/deploy/setup.sh",
    "docker:up": "cd docker && docker-compose up -d",
    "docker:down": "cd docker && docker-compose down",
    "docker:logs": "cd docker && docker-compose logs -f",
    "db:types": "echo 'Database types are now managed via PostgreSQL. Use pg_dump or a database introspection tool if needed.'",
    "pre-commit": "pnpm security-check && pnpm lint && pnpm test",
    "cleanup:failed-photos": "cd services/worker && pnpm exec tsx ../../scripts/utils/cleanup-failed-photos.ts",
    "cleanup:failed-photos:execute": "cd services/worker && pnpm exec tsx ../../scripts/utils/cleanup-failed-photos.ts --execute",
    "create-admin": "pnpm exec tsx scripts/utils/create-admin.ts",
    "init-users": "pnpm exec tsx scripts/utils/init-users.ts",
    "test:quick": "bash scripts/test/core/quick-verify.sh",
    "test:integration": "bash scripts/test/core/integration-test.sh",
    "test:components": "bash scripts/test/component/test-components.sh",
    "test:components:reliability": "bash scripts/test/component/test-component-reliability.sh",
    "test:e2e": "bash scripts/test/utils/test-e2e.sh",
    "test:e2e:ui": "pnpm exec playwright test --ui",
    "test:e2e:debug": "pnpm exec playwright test --debug",
    "test:mobile": "bash scripts/test/utils/test-mobile.sh",
    "test:edge-cases": "bash scripts/test/functional/test-edge-cases.sh",
    "test:browser-compat": "bash scripts/test/utils/test-browser-compat.sh"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "dotenv": "^17.2.3",
    "pg": "^8.13.1",
    "prettier": "^3.2.0",
    "tsx": "^4.16.0",
    "turbo": "^2.3.0"
  },
  "packageManager": "pnpm@10.30.3+sha512.c961d1e0a2d8e354ecaa5166b822516668b7f44cb5bd95122d590dd81922f606f5473b6d23ec4a5be05e7fcd18e8488d47d978bbe981872f1145d06e9a740017",
  "engines": {
    "node": ">=20.0.0"
  }
}
